<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      alignment="CENTER" spacing="16" prefWidth="740" prefHeight="460" style="-fx-padding:16;">
    <Label text="Results" style="-fx-font-size:20; -fx-font-weight:bold;"/>
    <Label fx:id="scoreLbl"/>
    <HBox spacing="8">
        <Button text="Finish Quiz (Save)" onAction="#onFinish"/>
        <Button text="Back to Menu" onAction="#onBack"/>
    </HBox>
    <Separator/>
    <Label text="Saved scores for this quiz:" style="-fx-opacity:0.8;"/>
    <ListView fx:id="resultsList" prefWidth="640" prefHeight="240"/>
</VBox>
