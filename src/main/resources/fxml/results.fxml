<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.web.*?>

<VBox prefHeight="520" prefWidth="720" spacing="12" style="-fx-padding:16;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <!-- Quiz info -->
    <Label fx:id="quizNameLbl" style="-fx-font-size:18; -fx-font-weight:bold;" />
    <Label fx:id="scoreLbl" prefWidth="0.0" />

    <!-- Completed HTML message -->
    <WebView fx:id="completedHtmlView" prefHeight="180" prefWidth="688.0" />

    <!-- Leaderboard -->
    <Label style="-fx-font-size:16; -fx-font-weight:bold;" text="Leaderboard" />
    <TableView fx:id="leaderboardTable" prefHeight="300">
        <columns>
            <TableColumn fx:id="playerCol" prefWidth="260" text="Player name" />
            <TableColumn fx:id="scoreCol" prefWidth="120" text="Score" />
            <TableColumn fx:id="dateCol" prefWidth="180" text="Date" />
        </columns>
    </TableView>

    <!-- Buttons -->
    <HBox spacing="10">
        <Button onAction="#onFinish" text="Finish Quiz (Save)" />
        <Button onAction="#onBack" text="Back to Menu" />
    </HBox>
</VBox>
