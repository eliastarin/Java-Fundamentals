<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" prefHeight="400" prefWidth="640" spacing="12"
      style="-fx-padding:16;" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1">

    <Label style="-fx-font-size:18; -fx-font-weight:bold;"
           text="Welcome to Inholland's Java Quiz Game!" />

    <Button onAction="#onLoad" text="Load Quiz!" />
    <Label fx:id="statusLbl" text="No quiz loaded." />

    <!-- Start buttons -->
    <HBox spacing="10">
        <Button fx:id="startBtn"    disable="true" text="Start"   onAction="#onStart"/>
        <Button fx:id="practiceBtn" disable="true" text="Practice Mode"   onAction="#onStartPractice"/>
    </HBox>
</VBox>
