<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      spacing="16" prefWidth="800" prefHeight="460" style="-fx-padding:16;">
    <!-- Top bar: name, progress, timer -->
    <HBox spacing="16">
        <Label fx:id="nameLbl" style="-fx-opacity:0.8;"/>
        <Region HBox.hgrow="ALWAYS"/>
        <Label fx:id="progressLbl" style="-fx-opacity:0.8;"/>
        <Label text=" | " style="-fx-opacity:0.4;"/>
        <Label text="Time:" style="-fx-opacity:0.7;"/>
        <Label fx:id="timerLbl" style="-fx-font-weight:bold;"/>
        <ProgressBar fx:id="timerBar" prefWidth="180"/>
    </HBox>

    <Label fx:id="questionLbl" wrapText="true" style="-fx-font-size:18; -fx-font-weight:bold;"/>
    <VBox fx:id="choicesBox" spacing="10"/>

</VBox>
